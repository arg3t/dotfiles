#!/bin/sh

HOSTNAME=$(hostnamectl hostname)

rm -rf "$HOME/.config/hypr/own"
echo '' > $HOME/.config/hypr/monitors.conf

if [ -d "$HOME/.config/hypr/$HOSTNAME" ]; then
  ln -s "$HOME/.config/hypr/$HOSTNAME" "$HOME/.config/hypr/own"
else
  ln -s "$HOME/.config/hypr/default" "$HOME/.config/hypr/own"
fi
