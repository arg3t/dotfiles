#!/bin/sh

layout=$(xkb-switch -p)

layouts=$(xkb-switch -l | xargs)

if [ ! "$layouts" = "us tr" ]; then
  ~/.local/share/bin/keyboard
fi


if [ "$layout" = "tr" ]; then
  xkb-switch -s "us"
  notify-send "Keyboard layout switched to us"
else
  xkb-switch -s "tr"
  notify-send "Keyboard layout switched to tr"
fi

kill -58 $(pidof dwmblocks)


